{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "BACKEND_URL",
    "CDP_API_KEY_ID",
    "CDP_API_KEY_SECRET",
    "CDP_PRIVATE_KEY",
    "CDP_WALLET_SECRET",
    "WISH_WALLET_ADDRESS"
  ]
}
