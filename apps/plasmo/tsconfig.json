{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules", ".claude", ".vscode"],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    ".plasmo/index.d.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
